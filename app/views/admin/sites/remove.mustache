<div class="small-modal">
{{#site}}   
  <h2>Remove {{name}}</h2>
  <form method='post' action="#/sites/{{id}}" enctype='multipart/form-data' id='remove-part'>
    <div class="hidden">                   
      <input type="hidden" name="_method" value="delete" />
    </div>
    <div class="note"> 
      Are you sure you want to delete this site?
    </div>
    <div class="buttons">
      <input type='submit' value="Delete" class='button html-only' />
      <a href="#/sites" class="cancel">Cancel</a>
    </div>
  </form>  
{{/site}}  
</div>