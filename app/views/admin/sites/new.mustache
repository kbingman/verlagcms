<div class="small-modal">  
  <h1>New Site</h1>  

  <form action="/admin/sites" method= "post">  
    <div class="field">   
      <label for="site_name">Name</label>
      <input type="text" id="site_name" name="site[name]" value="" class="textfield" />  
    </div> 
    <div class="field">   
      <label for="site_subdomain">Subdomain</label>
      <input type="text" id="site_subdomain" name="site[subdomain]" value="" class="textfield" />  
    </div>
    <div class="buttons">
      <input type="submit" id="page_save" value="Save" class="button" /> 
      <a href="/admin/sites" class="cancel">Cancel</a> 
    </div>
  </form>  
</div>