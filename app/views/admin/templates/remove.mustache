<div class="remove notice">
{{#layout}}   
  <h2>Remove Layout</h2>
  <form method='post' action="#/templates/{{id}}" id='remove-template'>
    <div class="hidden">                   
      <input type="hidden" name="_method" value="delete" />
    </div>
    <div class="note"> 
      Are you sure you want to delete this template?
    </div>
    <div class="buttons">
      <input type='submit' value="Delete" class='button html-only' />
      <a href="#/templates" class="cancel">Cancel</a>
    </div>
  </form>  
{{/layout}}   
</div>