{{#site}}
<h1>Edit Site</h1>  

<form action="/admin/sites/{{id}}" method= "post" class="command-save autosave">   
  <div class="hidden">
    <input type="hidden" name="_method" value="put" /> 
  </div>
  <div class="field">   
    <label for="site_name">Name</label>
    <input type="text" id="site_name" name="site[name]" value="{{name}}" class="textfield" />  
  </div> 
  <div class="field">   
    <label for="site_domain">Domain</label>
    <input type="text" id="site_domain" name="site[domain]" value="{{domain}}" class="textfield" />  
  </div>
  <div class="field">   
    <label for="site_subdomain">Subdomain</label>
    <input type="text" id="site_subdomain" name="site[subdomain]" value="{{subdomain}}" class="textfield" />  
  </div>
  <div class="actions">
    <input type="submit" id="page_save" value="Save" class="button" /> 
    <a href="/admin/sites" class="cancel">Cancel</a> 
    <a href= "http://{{domain}}/admin/">Switch to this Site</a>
  </div>
</form>  
{{/site}} 